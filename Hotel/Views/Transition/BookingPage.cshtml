        }

        .reserveButton {
            background-color: #58a6ff;
            color: #fff;
            border: none;
            padding: 8px 15px;
            margin-left: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .reserveButton:hover {
                background-color: #007bff;
            }

        .room-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .room-item img {
                width: 300px;
                height: 200px;
                margin-right: 20px;
            }

        .room-item-info h3 {
            margin-top: 0;
        }

        .room-item-info p {
            margin-bottom: 0;
        }

        /* Добавленные стили для dataContainer */
        #dataContainer,
        #startDateInput,
        #totalPrice,
        #endDateInput {
            background-color: rgba(255, 255, 255, 0.5);
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

            #dataContainer h2,
            #startDateInput h2,
            #totalPrice h2,
            #endDateInput h2,
            {
                margin-top: 0;
            }

            #dataContainer h3,
            #dataContainer p,
            #totalPrice h3,
            #totalPrice p,
            #endDateInput h3,
            #endDateInput p,
            #startDateInput h3,
            #startDateInput p {
                margin-bottom: 10px;
            }

            #dataContainer span,
            #endDateInput span,
            #totalPrice span,
            #startDateInput span {
                font-weight: bold;
            }
    </style>
</head>
