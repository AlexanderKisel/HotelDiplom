    <div id="dataContainer"></div>
    <input type="date" id="startDateInput">
    <input type="date" id="endDateInput">
    <p id ="totalPrice">Расчетная стоимость:<span></span></p>
    <button id="reserveButton" class="reserveButton">Забронировать</button>

